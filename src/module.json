{
  "extends": [
      "./base.json",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "es2021": true,
    }
  },
  "rules": {
    "semi": ["Error", "never"],
    "no-tabs": "off",
    "indent": [
			"error",
			"tab"
		],
  }
}

